    <style>
        /* Styles from split.css */
        html,
        body,
        section {
            height: 100%;
            margin: 0;
            padding: 0;
        }

        body {
            color: #fff;
            text-align: center;
             /* Gradient background */
        }

        /* Your additional styles */
        .img-container {
            text-align: center;
            margin-top: 20px;
        }

        .xop-container {
            display: flex;
            justify-content: center;
            margin-top: 20px;
        }

        .xop-left,
        .xop-right1,
        .xop-right2 {
            margin: 10px;
            display: flex;
            flex-direction: column;
            justify-content: center;
            background-size: cover;
            background-position: center;
            flex: 1;
            padding: 1rem;
            transition: all 0.2s ease-in-out;
            border-style: solid;
            border-width: 2px;
            border-color: black;
        }

        .xop-left {
            background-color: rgb(54, 55, 63); /*   176B87       */
            padding: 0.7rem 1rem; /* Adjusted padding */
        }

        .xop-right1 {
            background-color: #ff9d00;
        }

        .xop-right2 {
            background-color: #363062; /* Changed color for Leaderboard */
        }

        .xop-left:hover,
        .xop-right1:hover,
        .xop-right2:hover {
            transform: scale(0.95);
        }

        button {
            border: none;
            padding: 10px 20px;
            font-size: 18px;
            border-radius: 25px;
            cursor: pointer;
            color: white;
            background-color: transparent;
            transition: background-color 0.3s ease;
        }
        h4{
            color: #FFE79B;
        }


        button:hover {
            background-color: rgba(66, 65, 65, 0.3);
        }
        .xop-left:hover {
            background-color: rgb(26, 25, 32); /* Change hover color for Practice Questions button */
        }

        .xop-right1:hover {
            background-color: #b56c12; /* Change hover color for Practice Questions button */
        }

        .xop-right2:hover {
            background-color: #003865; /* Change hover color for Leaderboard button */
        }
       .xop-left:hover button{
            background-color: rgb(50, 90, 174);
        }
        .xop-right1:hover button {
            background-color: #0056b3; /* Add hover color for buttons */
        }
        .xop-right2:hover button {
            background-color: #EF5B0C; /* Add hover color for buttons */
        }
       
        /*
        #003865 - blue shade
        #EF5B0C - orange
        #FFE79B  - cream
 */


        .img {
            position: fixed;
            left: 50%;
            top: 50%;
            transform: translate(-50%, -50%);
            z-index: 1;
        }
        .relative{
        }
    </style>

</head>

